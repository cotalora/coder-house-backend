<form id="formRegister" class="form-container-login">
    <h1 class="login-title">REGISTRO</h1>

    <div class="form-group">
        <label for="email">Correo</label>
        <input type="email" class="form-control" name="email" id="email" placeholder="Ingrese su correo" required>
    </div>

    <div class="form-group">
        <label for="password">Contrase√±a</label>
        <input type="password" class="form-control" name="password" id="password" placeholder="Ingrese su correo" required>
    </div>

    <div class="form-group form-button-group">
        <button type="submit" id="buttonSubmit" class="btn btn-primary">Registrar</button>
        <button 
            type="button" class="button-send btn btn-primary"
            onclick="window.location.href = '/login';"
        >Ir a login</button>
    </div>

    <p id="messages-error" class="message-error"></p>
    <p id="messages-success" class="message-success"></p>
</form>