<div class="logout-container">
    <h1>Bienvenido {{email}}</h1>
    <button id="logout" class="btn btn-primary">Cerrar sesión</button>
</div>
<div class="main-container">
    <div class="product-component">
        <h2>Lista de productos</h2>
        <hr />
        <div class="mt-4 custom-table-container">
            <table class="custom-table table table-dark">
                <thead>
                    <tr>
                        <th scope="col">Título</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Imagen</th>
                    </tr>
                </thead>
                <tbody id="tbody">
                </tbody>
            </table>
        </div>
    </div>
    <div class="chat-component">
        <h2>Centro de mensajes</h2>
        <hr />
        <form id="formChat">
            <div class="form-group">
                <label for="email">Correo del usuario</label>
                <input type="email" class="form-control" name="email" id="email" placeholder="Ingrese su correo"
                    required>
            </div>
            <div class="form-group">
                <label for="name">Nombre</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Ingrese su nombre"
                    required>
            </div>
            <div class="form-group">
                <label for="lastName">Apellido</label>
                <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Ingrese su apellido"
                    required>
            </div>
            <div class="form-group">
                <label for="age">Edad</label>
                <input type="number" class="form-control" name="age" id="age" placeholder="Ingrese su edad"
                    required>
            </div>
            <div class="form-group">
                <label for="alias">Alias</label>
                <input type="text" class="form-control" name="alias" id="alias" placeholder="Ingrese su alias"
                    required>
            </div>
            <div class="form-group">
                <label for="avatar">Avatar</label>
                <input type="text" class="form-control" name="avatar" id="avatar" placeholder="Ingrese su avatar"
                    required>
            </div>

            <div id="messages-container" class="mt-3 mb-3 messages-container"></div>

            <div class="form-group d-flex">
                <input type="text" class="form-control" name="message" id="message" placeholder="Mensaje..." required>
                <button type="submit" class="button-send btn btn-primary">Enviar</button>
            </div>
        </form>
    </div>
</div>