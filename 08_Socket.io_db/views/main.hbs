<div class="main-container">
    <div class="product-component">
        <h2>Lista de productos</h2>
        <hr />
        <form id="form" class="mt-3">
            <div class="form-group">
                <label for="title">Nombre del producto</label>
                <input type="text" class="form-control" name="title" id="title" placeholder="Ingrese un nombre">
            </div>
            <div class="form-group">
                <label for="price">Precio del producto</label>
                <input type="number" class="form-control" name="price" id="price" placeholder="Ingrese un precio">
            </div>
            <div class="form-group">
                <label for="thumbnail">URL de imagen del producto</label>
                <input type="text" class="form-control" name="thumbnail" id="thumbnail" placeholder="Ingrese una URL">
            </div>
            <button type="submit" class="btn btn-primary">Crear producto</button>
        </form>
        <div class="mt-4 custom-table-container">
            <table class="custom-table table table-dark">
                <thead>
                    <tr>
                        <th scope="col">TÃ­tulo</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Imagen</th>
                    </tr>
                </thead>
                <tbody id="tbody">
                </tbody>
            </table>
        </div>
    </div>
    <div class="chat-component">
        <h2>Centro de mensajes</h2>
        <hr />
        <form id="formChat">
            <div class="form-group">
                <label for="email">Correo del usuario</label>
                <input type="email" class="form-control" name="email" id="email" placeholder="Ingrese un correo"
                    required>
            </div>

            <div id="messages-container" class="mt-3 mb-3 messages-container"></div>

            <div class="form-group d-flex">
                <input type="text" class="form-control" name="message" id="message" placeholder="Mensaje..." required>
                <button type="submit" class="button-send btn btn-primary">Enviar</button>
            </div>
        </form>
    </div>
</div>